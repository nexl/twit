<div class="row tweet">
  <div class="col-sm-2">
    <%= image_tag tweet.user.avatar.url, :class => "avatar" if tweet.user.avatar.present?%>
  </div>

  <div class="col-sm-10">
    <div class="row">
      <%= tweet.user.username %> - <%= tweet.created_at.to_date %>
    </div>

    <div class="row">
      <p><%= tweet.message %></p>
    </div>
  </div>
</div>