<%= form_for :session, :url => login_path, :html => {:class =>  "form-horizontal" } do | user | %>
  <div class="form-group">
    <%= user.label :email, :class => "control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= user.email_field :email, :class => "form-control", :required => true, :placeholder => "email" %>
    </div>
  </div>

  <div class="form-group">
    <%= user.label :password, :class => "control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= user.password_field :password, :class => "form-control", :required => true, :placeholder => "password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= user.submit "Login", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
